#:import TextInput kivy.uix.textinput.TextInput
<MyLayout>
	search_box:search_box
	result2:result2

	BoxLayout:
		orientation:"vertical"
		size: root.width, root.height
		spacing:10
		padding:10

		GridLayout:
			cols:2
			size_hint_y:None
			height:50
			spacing:10

			TextInput:
				id:search_box
				multiline:False
			Button:
				text:"Search"
				on_press: root.search()
				size_hint_x: 0.2

		TabbedPanel:
			do_default_tab:False

			TabbedPanelItem:
				text:"Tab1"
				
				ScrollView:
					GridLayout:
						cols:2
						spacing:5
						padding:5
						size_hint_y: None
						row_default_height:260
						height:self.minimum_height
					
						on_parent:
							for i in range(20):self.add_widget(TextInput(readonly = True))

			TabbedPanelItem:
				text:"Tab2"
				GridLayout:
					cols:1
					spacing:5
					padding:5

					TextInput:
						id:result2
						multiline:True
